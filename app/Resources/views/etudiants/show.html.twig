{% extends 'base.html.twig' %}

{% block body %}
    <h1>Etudiant</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ etudiant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ etudiant.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ etudiant.firstname }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ etudiant.mail }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('etudiants_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('etudiants_edit', { 'id': etudiant.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
