{% extends 'base.html.twig' %}

{% block body %}
    <h1>Etudiants list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td><a href="{{ path('etudiants_show', { 'id': etudiant.id }) }}">{{ etudiant.id }}</a></td>
                <td>{{ etudiant.name }}</td>
                <td>{{ etudiant.firstname }}</td>
                <td>{{ etudiant.mail }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('etudiants_show', { 'id': etudiant.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('etudiants_edit', { 'id': etudiant.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('etudiants_new') }}">Create a new etudiant</a>
        </li>
    </ul>
{% endblock %}
