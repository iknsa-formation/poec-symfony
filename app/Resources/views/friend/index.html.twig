{% extends 'base.html.twig' %}

{% block body %}
    <h1>Friends list</h1>

    <table class="table table-responsive table-bordered table-striped">
        <thead>
            <tr class="warning">
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Telephone</th>
                <th colspan="2">Action</th>
                
            </tr>
        </thead>
        <tbody>
        {% for friend in friends %}
            <tr>
                <td><a href="{{ path('friend_show', { 'id': friend.id }) }}">{{ friend.id }}</a></td>
                <td>{{ friend.name }}</td>
                <td>{{ friend.email }}</td>
                <td>{{ friend.telephone }}</td>
                
                        <td>
                            <a href="{{ path('friend_show', { 'id': friend.id }) }}">show</a>
                            </td>
                       
                        
                        <td>
                            <a href="{{ path('friend_edit', { 'id': friend.id }) }}">edit</a>
                            </td>
                        
            </tr>
        {% endfor %}
        <tr>
        <td colspan="6" style="text-align=center"><a href="{{ path('friend_new') }}">Create a new friend</a></td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('friend_new') }}">Create a new friend</a>
        </li>
    </ul>
{% endblock %}