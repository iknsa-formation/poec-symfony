{% block body %}
    <h1>Post</h1>

    <table class="table table-responsive table-bordered table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.titre }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ post.summary }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Created_At</th>
                <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ post.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}"><button type="button" class="btn btn-secondary">Back to the list</button></a>
        
            <button class="btn btn-warning"><a href="{{ path('post_edit', { 'id': post.id }) }}">Edit</a></button>
     <br><br>
            {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger">Delete</button>
            {{ form_end(delete_form) }}
{% endblock %}
