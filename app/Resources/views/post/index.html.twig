{% block body %}
    <h1>Posts list</h1>

    <table class="table table-responsive table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Summary</th>
                <th>Content</th>
                <th>Createdat</th>
                <th>Author</th>
                <th>Image</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.titre }}</td>
                <td>{{ post.summary }}</td>
                <td>{{ post.content }}</td>
                <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ post.author }}</td>
                <td>{{ post.image }}</td>
                <td>
                            <a href="{{ path('post_show', { 'id': post.id }) }}"><button type="button" class="btn btn-secondary">Show</button></a>
                            </td>
                       
                        
                        <td>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}"><button type="button" class="btn btn-secondary">Edit</button></a>
                            </td>
            </tr>
        {% endfor %}
        <tr>
        <td colspan="9" style="text-align=center;"><a href="{{ path('post_new') }}">Create a new article</a></td>
        </tr>
        </tbody>
    </table>
{% endblock %}
