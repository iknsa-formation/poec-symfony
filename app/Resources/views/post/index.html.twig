{% extends 'base.html.twig' %}
{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('bundles/framework/css/bootstrap.min.css') }}" type="text/css" />
			<link rel="stylesheet" href="{{ asset('bundles/framework/css/listeposte.css') }}" type="text/css" />
			{% endblock %}

{% block body %}
	
    <h1 id="text">liste des postes</h1>

    <table id="table" class="table table-info table-bordered">
        <thead>
            <tr class="table-warning">
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Summary</th>
                <th scope="col">Content</th>
                <th>Createdat</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.summary }}</td>
                <td>{{ post.content }}</td>
                <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    {% if post.getImage %}
                        <img src="{{ asset('uploads/pictures/' ~ post.getImage) }}" style="width:75px;max-height:75px;">
                    {% else %}
                        <i>null</i>
                    {% endif %}
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('post_show', { 'id': post.id }) }}"><img id='image' src="{{ asset('bundles/framework/image/oeil.png') }}"></a>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% for flash in app.session.flashBag.get('notice') %}
<div id="notice" class="notice alert alert-notice">
{{ flash }}
</div>
{% endfor %}
{% endblock %}
